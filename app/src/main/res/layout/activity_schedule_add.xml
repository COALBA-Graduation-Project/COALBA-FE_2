<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ScheduleAddActivity">

    <ImageView
        android:id="@+id/iv_scheduleadd_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_scheduleadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scheduleadd_title"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_scheduleadd_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_scheduleadd_back"/>

    <ScrollView
        android:id="@+id/sv_scheduleadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_scheduleadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/tv_scheduleadd_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduleadd_date"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_date"
                android:layout_width="152dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_scheduleadd_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd_date">

                <TextView
                    android:id="@+id/tv_scheduleadd_putdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_putdate"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_date"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_putdate"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_putdate"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_scheduleadd_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduleadd_time"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_date"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_time1"
                android:layout_width="152dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_scheduleadd_time"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd_time">

                <TextView
                    android:id="@+id/tv_scheduleadd_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_starttime"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_starttime"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_starttime"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_starttime"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_time2"
                android:layout_width="152dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cl_time1"
                app:layout_constraintBottom_toBottomOf="@id/cl_time1">

                <TextView
                    android:id="@+id/tv_scheduleadd_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_endtime"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_endtime"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_endtime"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_endtime"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>