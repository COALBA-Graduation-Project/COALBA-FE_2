<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.ScheduleAddActivity">

    <ImageView
        android:id="@+id/iv_scheduleadd_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_scheduleadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/scheduleadd_title"
        android:textColor="@color/black"
        android:textSize="21dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_scheduleadd_back"
        app:layout_constraintBottom_toBottomOf="@id/iv_scheduleadd_back"/>

    <ScrollView
        android:id="@+id/sv_scheduleadd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_scheduleadd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/tv_scheduleadd_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduleadd_date"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_date"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_scheduleadd_date"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd_date">

                <TextView
                    android:id="@+id/tv_scheduleadd_putdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_exdate"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_putdate"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_date"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_putdate"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_putdate"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_scheduleadd_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduleadd_time"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_date"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_time1"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_scheduleadd_time"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd_time">

                <TextView
                    android:id="@+id/tv_scheduleadd_starthour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_starthour"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_scheduleadd_startcolon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_colon"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toEndOf="@id/tv_scheduleadd_starthour"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_starthour"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_starthour"/>

                <TextView
                    android:id="@+id/tv_scheduleadd_startminute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_startminute"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toEndOf="@id/tv_scheduleadd_startcolon"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_starthour"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_starthour"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_starttime"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_starthour"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_starthour"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_time2"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/cl_time1"
                app:layout_constraintBottom_toBottomOf="@id/cl_time1">

                <TextView
                    android:id="@+id/tv_scheduleadd_endhour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_endhour"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/tv_scheduleadd_endcolon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_colon"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toEndOf="@id/tv_scheduleadd_endhour"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_endhour"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_endhour"/>

                <TextView
                    android:id="@+id/tv_scheduleadd_endminute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_endminute"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    app:layout_constraintStart_toEndOf="@id/tv_scheduleadd_endcolon"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_endhour"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_endhour"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_endtime"
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_time"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_endhour"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_endhour"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_scheduleadd_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduleadd_person"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_time1"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_person"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_mypage"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/tv_scheduleadd_person"
                app:layout_constraintTop_toBottomOf="@+id/tv_scheduleadd_person">

                <TextView
                    android:id="@+id/tv_scheduleadd_putperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scheduleadd_experson"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ImageView
                    android:id="@+id/iv_scheduleadd_putperson"
                    android:layout_width="16dp"
                    android:layout_height="8dp"
                    android:src="@drawable/ic_dropdown"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toTopOf="@id/tv_scheduleadd_putperson"
                    app:layout_constraintBottom_toBottomOf="@id/tv_scheduleadd_putperson"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_scheduleadd_wage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/scheduleadd_wage"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cl_person"/>

            <EditText
                android:id="@+id/et_scheduleadd_wage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:hint="@string/scheduleadd_et_wage"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/tv_scheduleadd_wage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btn_scheduleadd_finish"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/bg_basicbtn"
                android:layout_marginTop="160dp"
                android:layout_marginHorizontal="12dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/profileregister_completion"
                app:layout_constraintTop_toBottomOf="@id/et_scheduleadd_wage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>