<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_recyclerview"
    android:elevation="8dp"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="28dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="12dp">

    <TextView
        android:id="@+id/tv_home_workspace_staff_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_starttime"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/substitutework_process_dash"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_home_workspace_staff_starttime"
        app:layout_constraintTop_toTopOf="@id/tv_home_workspace_staff_starttime"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_workspace_staff_starttime"/>

    <TextView
        android:id="@+id/tv_home_workspace_staff_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_endtime"
        android:textSize="17dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_dash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_home_workspace_staff_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_name2"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/tv_home_workspace_staff_endtime"
        app:layout_constraintTop_toTopOf="@id/tv_home_workspace_staff_starttime"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_workspace_staff_starttime"/>

    <TextView
        android:id="@+id/tv_home_workspace_staff_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_recycle"
        android:text="@string/base_state"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@color/gray"
        app:layout_constraintTop_toTopOf="@id/tv_home_workspace_staff_starttime"
        app:layout_constraintBottom_toBottomOf="@id/tv_home_workspace_staff_starttime"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>