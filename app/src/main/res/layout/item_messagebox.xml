<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_recyclerview"
    android:elevation="8dp"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_messagebox_profile"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_emptyimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_messagebox_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="@string/base_name3"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_messagebox_profile"
        app:layout_constraintTop_toTopOf="@id/iv_messagebox_profile"/>

    <TextView
        android:id="@+id/tv_messagebox_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="11dp"
        android:text="@string/messagebox_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_messagebox_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_messagebox_name"/>

    <TextView
        android:id="@+id/tv_messagebox_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="13dp"
        android:text="@string/messagebox_content"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@id/tv_messagebox_name"
        app:layout_constraintTop_toBottomOf="@id/tv_messagebox_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>