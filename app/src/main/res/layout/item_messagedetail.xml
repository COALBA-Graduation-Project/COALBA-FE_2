<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_messagedetail_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/receive_message"
        android:textStyle="bold"
        android:textSize="13dp"
        android:text="@string/message_receive"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_messagedetail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="10dp"
        android:text="@string/message_date"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toStartOf="@id/tv_messagedetail_time"
        app:layout_constraintTop_toTopOf="@id/tv_messagedetail_state"
        app:layout_constraintBottom_toBottomOf="@id/tv_messagedetail_state"/>

    <TextView
        android:id="@+id/tv_messagedetail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textStyle="bold"
        android:textSize="10dp"
        android:text="@string/message_time"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_messagedetail_state"
        app:layout_constraintBottom_toBottomOf="@id/tv_messagedetail_state"/>

    <TextView
        android:id="@+id/tv_messagedetail_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:text="@string/message_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/tv_messagedetail_state"
        app:layout_constraintTop_toBottomOf="@id/tv_messagedetail_state"/>

    <View
        android:id="@+id/ll_messagedetail"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_messagedetail_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>