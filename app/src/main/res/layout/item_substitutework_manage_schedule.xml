<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_recyclerview"
    android:layout_marginTop="4dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="16dp"
    android:elevation="8dp"
    android:paddingHorizontal="16dp"
    android:paddingBottom="16dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_substitutework_manage_profile1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_emptyimg"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_name2"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_substitutework_manage_profile1"
        app:layout_constraintTop_toTopOf="@id/iv_substitutework_manage_profile1"
        app:layout_constraintBottom_toBottomOf="@id/iv_substitutework_manage_profile1"/>

    <ImageView
        android:id="@+id/iv_substitutework_manage_arrow"
        android:layout_width="20dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_arrow"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_substitutework_manage_name1"
        app:layout_constraintTop_toTopOf="@id/tv_substitutework_manage_name1"
        app:layout_constraintBottom_toBottomOf="@id/tv_substitutework_manage_name1"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_substitutework_manage_profile2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_emptyimg"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/iv_substitutework_manage_arrow"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_name1"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_substitutework_manage_profile2"
        app:layout_constraintTop_toTopOf="@id/iv_substitutework_manage_profile2"
        app:layout_constraintBottom_toBottomOf="@id/iv_substitutework_manage_profile2"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/substitutework_state_submit"
        android:textStyle="bold"
        android:textColor="@color/main"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_store_name1"
        android:textColor="@color/gray"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/iv_substitutework_manage_profile1"
        app:layout_constraintTop_toBottomOf="@id/iv_substitutework_manage_profile1"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/message_date"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/tv_substitutework_manage_store"
        app:layout_constraintTop_toBottomOf="@id/tv_substitutework_manage_store"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_starttime"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_substitutework_manage_date"
        app:layout_constraintTop_toTopOf="@id/tv_substitutework_manage_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_substitutework_manage_date"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/substitutework_process_dash"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_substitutework_manage_starttime"
        app:layout_constraintTop_toTopOf="@id/tv_substitutework_manage_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_substitutework_manage_date"/>

    <TextView
        android:id="@+id/tv_substitutework_manage_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_endtime"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_substitutework_manage_dash"
        app:layout_constraintTop_toTopOf="@id/tv_substitutework_manage_date"
        app:layout_constraintBottom_toBottomOf="@id/tv_substitutework_manage_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>