<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <View
        android:id="@+id/ll_schedule_item"
        android:layout_width="3dp"
        android:layout_height="24dp"
        android:background="@color/main"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_schedule_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_name1"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/ll_schedule_item"
        app:layout_constraintTop_toTopOf="@+id/ll_schedule_item"
        app:layout_constraintBottom_toBottomOf="@id/ll_schedule_item"/>

    <TextView
        android:id="@+id/tv_schedule_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_time"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@+id/tv_schedule_name"
        app:layout_constraintTop_toTopOf="@+id/ll_schedule_item"
        app:layout_constraintBottom_toBottomOf="@id/ll_schedule_item"/>
    
    <ImageView
        android:id="@+id/iv_schedule_delete"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_delete"
        android:layout_marginEnd="12dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@+id/ll_schedule_item"
        app:layout_constraintBottom_toBottomOf="@id/ll_schedule_item"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>